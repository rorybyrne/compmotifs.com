---
// src/pages/index.astro
import TufteLayout from '../layouts/main.astro';
import Article from '../components/article.astro';
import Sidenote from '../components/sidenote.astro';

const researchAreas = [
  {
    title: "Complex Systems Modeling",
    description: "Developing computational models to understand emergent behaviors in natural and artificial systems."
  },
  {
    title: "Scientific Machine Learning",
    description: "Combining physics-based modeling with modern machine learning approaches."
  },
  {
    title: "High-Performance Computing",
    description: "Leveraging distributed computing for large-scale scientific simulations."
  }
];

const recentPublications = [
  {
    title: "Emergent Patterns in Multi-Agent Systems",
    authors: "Zhang, Smith, et al.",
    year: 2024,
    journal: "Journal of Complex Systems"
  },
  {
    title: "Neural Networks for Physical System Identification",
    authors: "Johnson, Patel, et al.",
    year: 2024,
    journal: "Scientific Machine Learning Review"
  }
];
---

<TufteLayout title="Computational Science Research Collective">
  <Article title="Computational Science Research Collective" author="Advancing Scientific Understanding Through Computation">
    <p class="lead">
      We are an interdisciplinary group of researchers using computational methods
      to advance scientific understanding across multiple domains.
      <Sidenote number={1}>
        Founded in 2020, our collective brings together experts from computer science,
        physics, biology, and mathematics.
      </Sidenote>
    </p>

    <h2>Our Approach</h2>
    <p>
      Our work combines rigorous mathematical foundations with cutting-edge
      computational techniques.
      <Sidenote number={2}>
        We primarily use Julia and Python for our research, with custom C++
        implementations for performance-critical components.
      </Sidenote>
    </p>

    <h2>Research Areas</h2>
    <div class="research-areas">
      {researchAreas.map((area, index) => (
        <div class="research-area">
          <h3>{area.title}</h3>
          <p>{area.description}</p>
        </div>
      ))}
    </div>

    <h2>Recent Publications</h2>
    <div class="publications">
      {recentPublications.map((pub, index) => (
        <div class="publication">
          <p class="pub-title">{pub.title}</p>
          <p class="pub-details">
            {pub.authors} ({pub.year})
            <Sidenote>
              Published in {pub.journal}
            </Sidenote>
          </p>
        </div>
      ))}
    </div>

    <h2>Join Our Work</h2>
    <p>
      We welcome collaborations with researchers and institutions worldwide.
      <Sidenote number={3}>
        Current opportunities include postdoctoral positions and graduate
        student openings.
      </Sidenote>
    </p>

    <div class="contact-section">
      <h3>Get in Touch</h3>
      <p>
        Interested in our work? We'd love to hear from you.
        <br />
        Email: contact@computational-collective.org
      </p>
    </div>
  </Article>
</TufteLayout>

<style>
  .lead {
    font-size: 1.4rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .research-areas {
    margin: 2rem 0;
  }

  .research-area {
    margin-bottom: 2rem;
  }

  .research-area h3 {
    margin-bottom: 0.5rem;
  }

  .publications {
    margin: 2rem 0;
  }

  .publication {
    margin-bottom: 1.5rem;
  }

  .pub-title {
    font-weight: bold;
    margin-bottom: 0.2rem;
  }

  .pub-details {
    font-size: 0.9rem;
    margin-top: 0;
  }

  .contact-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
  }

  @media (max-width: 760px) {
    .lead {
      font-size: 1.2rem;
    }
  }
</style>
