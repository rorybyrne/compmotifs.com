---
// src/components/Article.astro
interface Props {
  title: string;
  author?: string;
}

const { title, author } = Astro.props;
---

<article>
  <div class="header">
    <img src="/logo.svg" alt="Science through Computation Initiative Logo" class="logo" />
    <div>
      <h1>{title}</h1>
      {author && <p class="author">{author}</p>}
    </div>
  </div>
  <slot />
</article>

<style>
  article {
    position: relative;
    padding-top: 5rem;
    padding-bottom: 3rem;
    counter-reset: sidenote-counter;
    text-width: auto;
  }


  .header {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 3rem;
    width: var(--text-width);
  }

  .logo {
    width: 150px;
    height: auto;
    flex-shrink: 0;
    align-self: start;
  }

  .header > div {
    flex: 1;
    min-width: 0;
  }

  .author {
    font-style: italic;
    margin-top: -1rem;
    margin-bottom: 0;
    color: var(--light-text-color);
  }

  @media (max-width: 760px) {
    .header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .logo {
      display: none;
    }
  }
</style>
