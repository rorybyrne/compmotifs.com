---
// src/components/timeline-event.astro
interface Props {
  date: string;
  title: string;
  location: string;
}

const { date, title, location } = Astro.props;
---

<div class="timeline-event">
  <div class="timeline-content">
    <h3 class="timeline-title">{title}</h3>
    <div class="timeline-meta">
      <time datetime={date} class="timeline-date">{date}</time>
      <span class="timeline-location">{location}</span>
    </div>
    <div class="timeline-description">
      <slot />
    </div>
  </div>
</div>

<style>
  .timeline-event {
    display: flex;
    margin-bottom: 3rem;
    position: relative;
    overflow: visible; /* Ensure sidenotes can go outside the container */
  }

  .timeline-event::before {
    content: "";
    position: absolute;
    left: 1.5rem;
    top: 0;
    bottom: -3rem;
    width: 1px;
    background-color: rgba(0, 0, 0, 0.1);
    z-index: 0;
  }


  .timeline-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    align-items: center;
  }

  .timeline-date {
    font-style: italic;
    color: var(--side-note-color);
    font-size: 0.9rem;
  }

  .timeline-content {
    position: relative;
    flex-grow: 1;
    margin-left: 4.5rem;
    width: calc(100% - 4.5rem); /* Wider content area */
  }

  .timeline-content::before {
    content: "";
    position: absolute;
    width: 12px;
    height: 12px;
    /* border-radius: 50%; */
    /* background-color: var(--background-color); */
    /* border: 1px solid var(--side-note-color); */
    left: -2rem;
    top: 0.5rem;
  }

  .timeline-title {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }

  .timeline-location {
    font-style: italic;
    color: var(--side-note-color);
    font-size: 0.9rem;
    position: relative;
  }
  
  .timeline-location::before {
    content: "â€¢";
    margin-right: 0.5rem;
  }

  .timeline-description {
    margin-bottom: 1rem;
    position: relative;
    overflow: visible;
  }
  
  .timeline-description :global(.timeline-image) {
    width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1.5rem 0;
    object-fit: contain;
    background-color: #fffff2;
  }
  
  /* /* Ensure sidenotes display properly in timeline */ */
  /* .timeline-description :global(.sidenote) { */
  /*   position: absolute; */
  /*   right: -350px; */
  /*   width: var(--side-note-width); */
  /*   float: none; */
  /*   margin-right: 0; */
  /* } */

  @media (max-width: 760px) {
    .timeline-event::before {
      left: 0.5rem;
    }

    .timeline-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }

    .timeline-content {
      margin-left: 2rem;
      width: calc(100% - 2rem); /* Adjust width for mobile */
    }

    .timeline-content::before {
      left: -1.5rem;
    }
    
    /* Mobile sidenote handling */
    .timeline-description :global(.sidenote) {
      position: static;
      right: auto;
      width: auto;
      float: none;
      margin: 1rem 0;
      display: none;
    }
    
